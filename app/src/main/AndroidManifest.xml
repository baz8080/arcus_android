<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="com.arcuscomputing.dictionarypro.ads"
          android:installLocation="auto"
          android:versionCode="231"
          android:versionName="2.3.1" >

    <application
        android:icon="@mipmap/ic_launcher"
        android:name="com.arcuscomputing.ArcusApplication"
        android:label="@string/app_name"
        android:theme="@style/ArcusTheme" >

        <activity
            android:name="com.arcuscomputing.dictionary.ArcusSearchActivity"
            android:configChanges="orientation|keyboardHidden"
            android:label="@string/app_name"
            android:launchMode="singleTask"
            android:windowSoftInputMode="stateVisible|adjustPan" >

            <intent-filter>

                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name="com.arcuscomputing.dictionary.EditPreferencesActivity"
            android:label="@string/app_name" >
        </activity>
        
        <activity
            android:name="com.arcuscomputing.dictionary.ArcusFavouritesActivity"
            android:label="@string/app_name" >
        </activity>

    </application>

</manifest>